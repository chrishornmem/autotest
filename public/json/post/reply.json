{
    "content": [{
        "ref": "reply.json",
        "type": "input",
        "menuRef": "/post/menu.json",
        "header": "** #post profile **",
        "comment": "User must have a name (avatar) to comment",
        "footer": "send name, or 'back'",
        "content": {
            "type": "string",
            "description": "Give yourself a name. Anything you like."
        }
    }, {
        "type": "input",
        "menuRef": "/post/menu.json",
        "header": "** %post title% **",
        "footer": "Send reply or 'back'",
        "content": {
            "type": "string",
            "description": "Send your reply here"
        }
    }, {
        "type": "wizard",
        "menuRef": "/post/menu.json",
        "header": "** %post title% **",
        "content": [{
            "type": "any",
            "description": "%avatar%"
        }, {
            "type": "any",
            "description": "%reply text%"
        }]
    }, {
        "type": "message",
        "header": "** %post title% **",
        "description": "Your reply was added to this comment"
    }, {
        "type": "end",
        "ref": "/post/viewcomment.json"
    }]
}