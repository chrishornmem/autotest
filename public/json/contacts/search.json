{
    "content": [{
        "ref": "search.json",
        "type": "input",
        "menuRef": "/contacts/menu.json",
        "header": "#contacts search",
        "footer": "send text, or 'back'",
        "content": {
            "type": "string",
            "description": "Send keyword or 'back'.",
            "var": "$contactSearchString"
        }
    }, {
        "type": "menu",
        "menuRef": "/contacts/menu.json",
        "header": "** #contacts search '{{$contactSearchString}}' **",
        "comment": "\n** #contacts search %string% **\nNo results found.\nSend another keyword or 'back'.\n<send keyword or 'back'>\nif not found then prompt again for another search string",
        "content": [{
            "ref": "/contacts/searchdetail.json",
            "type": "linkDynamic",
            "description": "Chris {{$contactSearchString}}",
            "var": "$contactFirstName=Chris"
        }, {
            "ref": "/contacts/viewcontact.json",
            "type": "linkDynamic",
            "description": "Bob {{$contactSearchString}}",
            "var": "$contactFirstName=Bob"
        }, {
            "ref": "/contacts/viewcontact.json",
            "type": "linkDynamic",
            "description": "Joe {{$contactSearchString}}",
            "var": "$contactFirstName=Joe"
        }]
    }, {
        "type": "end",
        "ref": "#contacts menu"
    }]
}