{
    "content": [{
        "type": "input",
        "menuRef": "/wodaabe/index.json",
        "header": "** User details **",
        "footer": "send details or \"menu\"",
        "content": {
            "type": "string",
            "description": "Male or Female?",
            "var": "sex"
        }
    }, {
        "type": "input",
        "menuRef": "/wodaabe/menu.json",
        "header": "** Age **",
        "content": {
            "type": "string",
            "description": "Your age?",
            "var": "age"
        }
    }, {
        "type": "input",
        "menuRef": "/wodaabe/menu.json",
        "header": "** #Location **",
        "content": {
            "type": "string",
            "description": "Your location?",
            "var": "location"
        }
    }, { 
        "type": "wizard",
        "menuRef": "/wodaabe/menu.json",
        "header": "** User details **",
        "content": [{
            "type": "any",
            "description": "{{sex}}"
        }, {
            "type": "any",
            "description": "{{age}}"
        }, {
            "type": "any",
            "description": "{{location}}"
        }]
    }, {
        "type": "message",
        "header": "** #User details **",
        "description": "User details saved"
    }, {
        "type": "end",
        "ref": "#wodaabe"
    }]
}